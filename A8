#import random library
import random

# Create Order Class
class Order() :
    def __init__(self) :
        self.burger_count = 0

#Create a Method to Randomly generate a burger count
    def randomBurgers(self) :
        self.burger_count = random.randint(1,20)

# Create a Person class
class Person() :
    def __init__(self) :
        self.customer_name = self.randomName()

    def randomName(self) :
        lsCustomers = ["Jefe", "El Guapo", "Lucky Day", "Ned Nederlander", "Dusty Bottoms", "Harry Flugleman", "Carmen", "Invisible Swordsman", "Singing Bush"]
        self.customer_name = (lsCustomers[random.randint(0,8)])
        return self.customer_name
    
# Create Customer class that inherits from the Person Class
class Customer(Person) :
    def __init__(self):
        super().__init__()
        self.order = Order()
    
